using system;

public class MyProgram
{
    public static void main(string[] args)
    {
        string menuButton;
        
        output("Press any key and then enter to begin" + "\n");
        menuButton = inputText();
        if (menuButton == "")
        {
        }
        MainMenu();
    }
    
    public static void MainMenu()
    {
        output("Press 1 to Continue Game" + "\n");
        output("Press 2 to begin New Game" + "\n");
        output("Press 3 to enter Options" + "\n");
        output("Press 4 to edit Data" + "\n");
        string beginGame;
        string options;
        string data;
        int userInput;
        int number;
        
        userInput = (int) inputValue();
        if (userInput < 0)
        {
            userInput = userInput * -1;
        }
        if (userInput == 1)
        {
            continueGame();
        }
        else
        {
            if (userInput == 2)
            {
                beginGame();
            }
            else
            {
                if (userInput == 3)
                {
                    options();
                }
                else
                {
                    if (userInput == 4)
                    {
                        data();
                    }
                    else
                    {
                        if (userInput > 4)
                        {
                        }
                        output("Sorry, could not understand command" + "\n");
                        
                        // Add Pointer in C# to go back to code in line 13
                    }
                }
            }
        }
    }
    
   // ' .NET can only read single characters or entire lines from the console.
   // ' The following functions are designed to help input specific data types.
   // private static double inputValue()
    {
        double result
        while (!double.TryParse(Console.ReadLine(), out result));
        return result
    }
    
    private static string inputText()
    {
        return Console.ReadLine()
    }
    
    private static output(string text)
    {
        Console.WriteLine(text)
    }
}
